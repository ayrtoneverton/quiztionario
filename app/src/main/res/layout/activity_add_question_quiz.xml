<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.AddQuestionQuizActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="100dp">

        <TextView
            android:id="@+id/EspacoInicial"
            android:layout_width="251dp"
            android:layout_height="7dp"
            android:text=""
            app:autoSizeTextType="uniform" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/QuizQuestions"
                android:layout_width="251dp"
                android:layout_height="33dp"
                android:text="Quiz Questions"
                app:autoSizeTextType="uniform" />
            <TextView
                android:id="@+id/EspNQuestion"
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />

            <ImageButton
                android:id="@+id/AddNewQuestion"
                android:layout_width="151dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:onClick="newQuestion"
                app:srcCompat="@android:drawable/ic_menu_add" />
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="184dp"
            android:layout_height="31dp"
            android:orientation="vertical"><![CDATA[

            />


            ]]></LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>